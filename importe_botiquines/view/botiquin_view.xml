<?xml version="1.0"?>
<odoo>
    <data>
        <record id="_view" model="ir.ui.view">
            <field name="name">account.invoice_botiquin_view.inherited</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="x_botiquin"/>                
                <field name="x_material"/>                
                <field name="x_serviciok"/>                
            </xpath>  
            </field>
        </record>    
    </data>
</odoo>